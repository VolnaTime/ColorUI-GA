<!--pages/index/plugin/tips/tips.wxml-->
<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">滚动提示</view>
</cu-custom>

<view class="scrollPage">

  <view class="cu-bar bg-white margin-top-xs">
    <view class="action">
      <text class="cuIcon-titles text-blue"></text>基础样式
    </view>
  </view>

  <swiper class="swiperitem margin" autoplay="true" vertical="true" circular="true" interval="2000" duration="500">
    <block wx:for="{{Headlines}}" wx:key="index">
      <swiper-item catchtouchmove='false'>
        <view class="cu-bar-new radius-lg bg-orange light">
          <view class='padding-xs text-xl'>
            <text class='cuIcon-magic text-orange'></text>
            <text class="text-df"> {{item.title}}</text>
          </view>
        </view>
      </swiper-item>
    </block>
  </swiper>

  <view class="flex-row s_box margin-bottom">
    <swiper class="new_swiper" vertical="true" autoplay="true" circular="true" interval="3000" duration="500" display-multiple-items='1' easing-function="easeInOutCubic">
      <block wx:for-index="idx" wx:for='{{5}}' wx:key="index">
        <swiper-item>
          <view class="padding-left cu-bar-new bg-orange light"><text class='cuIcon-magic text-orange'> 这是一条消息提示消息提示~</text></view>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class="cu-bar bg-white margin-top-xs">
    <view class="action">
      <text class="cuIcon-titles text-blue"></text>形状/颜色
    </view>
  </view>

  <swiper class="swiperitem margin" autoplay="true" vertical="true" circular="true" interval="2000" duration="500">
    <block wx:for="{{Headlines}}" wx:key="index">
      <swiper-item catchtouchmove='false'>
        <view class="cu-bar-new radius bg-orange light">
          <view class='padding-xs text-xl'>
            <text class='cuIcon-magic text-orange'></text>
            <text class="text-df"> {{item.title}}</text>
          </view>
        </view>
      </swiper-item>
    </block>
  </swiper>

  <swiper class="swiperitem margin-tb" autoplay="true" vertical="true" circular="true" interval="2000" duration="500">
    <block wx:for="{{Headlines}}" wx:key="index">
      <swiper-item catchtouchmove='false'>
        <view class="cu-bar-new bg-pink light">
          <view class='padding-xs text-xl'>
            <text class='cuIcon-magic text-pink'></text>
            <text class="text-df"> {{item.title}}</text>
          </view>
        </view>
      </swiper-item>
    </block>
  </swiper>

  <view class="cu-bar bg-white margin-top-xs">
    <view class="action">
      <text class="cuIcon-titles text-blue"></text>方向
    </view>
  </view>

  <swiper class="swiperitem margin-tb" autoplay="true" circular="true" interval="2000" duration="500">
    <block wx:for="{{Headlines}}" wx:key="index">
      <swiper-item catchtouchmove='false'>
        <view class="cu-bar-new bg-pink light">
          <view class='padding-xs text-xl'>
            <text class='cuIcon-magic text-pink'></text>
            <text class="text-df"> {{item.title}}</text>
          </view>
        </view>
      </swiper-item>
    </block>
  </swiper>

  <view class="cu-bar bg-white margin-top-xs">
    <view class="action">
      <text class="cuIcon-titles text-blue"></text>点击跳转
    </view>
  </view>

  <swiper class="swiperitem margin-tb" autoplay="true" circular="true" interval="2000" duration="500">
    <block wx:for="{{Headlines}}" wx:key="item">
      <swiper-item catchtouchmove='false' bindtap="linesclick" data-url="{{item.url}}">
        <view class="cu-bar-new bg-orange light">
          <view class='padding-xs text-xl'>
            <text class='cuIcon-magic text-orange'></text>
            <text class="text-df"> {{item.title}}</text>
          </view>
        </view>
      </swiper-item>
    </block>
  </swiper>

  <view class="cu-bar bg-white margin-top-xs">
    <view class="action">
      <text class="cuIcon-titles text-blue"></text>两行
    </view>
  </view>

  <swiper class="bot_swiper bg-white radius-lg padding-left-sm" vertical="true" autoplay="{{true}}" circular="true" interval="3000" display-multiple-items='2'>
    <block wx:for-index="idx" wx:for='{{3}}' wx:key="item">
      <swiper-item>
        <view class="flex text-orange" style="align-items: baseline;">
          <text class="padding-top-xs" decode="{{true}}">2021-11-25 &nbsp;&nbsp;&nbsp;17:38</text>
          <text decode="{{true}}">&nbsp;&nbsp;123</text>
        </view>
      </swiper-item>
    </block>
  </swiper>

  <view class="cu-bar bg-white margin-top">
    <view class="action">
      <text class="cuIcon-titles text-blue"></text>多行
    </view>
  </view>

  <view class="box margin-tb margin-lr-xl">
    <view class="box_i bg-white radius-lg padding-lr">
      <swiper class="swiper" vertical="true" autoplay="{{true}}" circular="true" interval="3000" style="height: {{list.length  > 6 ? '460' : list.length *60}}rpx;" display-multiple-items='{{list.length > 6 ? 7 :list.length}}'>
        <block wx:for-index="idx" wx:for="{{list}}" wx:key="list">
          <swiper-item>
            <view class="flex" style="align-items: baseline;">
              <text decode="{{true}}" class="text-gray">{{item.create_time}} &nbsp;&nbsp;&nbsp;</text>
              <text decode="{{true}}" class="text-orange">&nbsp;&nbsp;抽中了{{item.prize_name}}</text>
            </view>
          </swiper-item>
        </block>
      </swiper>
    </view>
  </view>

</view>