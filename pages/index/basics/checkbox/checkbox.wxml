<!--pages/index/basics/checkbox/checkbox.wxml-->
<import src="/pages/template/common/copyright.wxml" />

<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">复选框</view>
</cu-custom>

<view class="cu-bar bg-white">
  <view class='action'>
    <text class='cuIcon-titles text-blue'></text>单选
  </view>
</view>

<radio-group class="block">
  <view class="cu-form-group margin-top">
    <view class="title">单选(radio)</view>
    <radio checked></radio>
  </view>
  <view class="cu-form-group">
    <view class="title">定义样式</view>
    <radio class="radio"></radio>
  </view>
  <view class="cu-form-group">
    <view class="title">定义颜色</view>
    <view>
      <radio class="blue radio"></radio>
      <radio class="red margin-left-sm"></radio>
    </view>
  </view>
</radio-group>

<view class="cu-bar bg-white margin-top">
  <view class='action'>
    <text class='cuIcon-titles text-blue'></text>复选
  </view>
</view>

<view class="cu-form-group margin-top">
  <view class="title">复选(checkbox)</view>
  <checkbox></checkbox>
</view>

<view class="cu-form-group">
  <view class="title">定义形状</view>
  <checkbox class="round" checked></checkbox>
</view>

<view class="cu-form-group">
  <view class="title">定义颜色</view>
  <checkbox class="round blue" checked></checkbox>
</view>

<view class="margin-top" style="margin-top: 13vh;">
  <template is="copyright"></template>
  <ad unit-id="adunit-548518d3cd8c2bc3"></ad>
</view>